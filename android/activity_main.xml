
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC">

    <!-- Status Header - Target of Pulse Animation -->
    <androidx.cardview.widget.CardView
        android:id="@+id/statusCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent">
        
        <!-- 
          The pulse animation (Scale/Alpha) is triggered programmatically in MainActivity.kt
          when SafetyStatus updates to ATTENTION (Orange Pulse) or EMERGENCY (Red Strobe).
        -->
        <LinearLayout
            android:id="@+id/statusContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            android:background="#1E1E1E"> <!-- Updated to default dark for Safe -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CURRENT STATUS"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:alpha="0.6" />
            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Safe"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="black" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Last Check-in Display -->
    <TextView
        android:id="@+id/lastCheckInText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Last confirmed: --:--"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#64748B"
        app:layout_constraintTop_toBottomOf="@id/statusCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- The "Alive" Button - Oversized for elder friendliness -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnImAlive"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:text="I'M ALIVE\nमैं ठीक हूँ"
        android:textSize="24sp"
        android:textStyle="bold"
        app:cornerRadius="140dp"
        android:backgroundTint="#16A34A"
        app:layout_constraintTop_toBottomOf="@id/lastCheckInText"
        app:layout_constraintBottom_toTopOf="@id/btnPanic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Emergency Panic Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPanic"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="24dp"
        android:text="EMERGENCY PANIC"
        android:backgroundTint="#DC2626"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
